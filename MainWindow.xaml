<Window x:Class="CalculatorOnWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorOnWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblOutput" Content="Результат: &#xD;&#xA;" HorizontalAlignment="Left" Margin="36,162,0,0" VerticalAlignment="Top" Height="30" Width="221"/>
        <TextBox x:Name="tbInputExpression" HorizontalAlignment="Left" Margin="163,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnCalculate" Content="Вычислить" HorizontalAlignment="Left" Margin="36,217,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.795,3.935" Height="33" Click="Button_Click"/>
        <Label Content="Введите выражение" HorizontalAlignment="Left" Margin="36,74,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbInputX" Text="" HorizontalAlignment="Left" Margin="165,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Введите переменную:" HorizontalAlignment="Left" Margin="36,120,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
